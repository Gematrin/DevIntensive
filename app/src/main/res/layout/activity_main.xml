<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/userphoto0"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode="pin"/>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.activities.MainActivity"
                android:orientation="vertical">

                <!--User Stats-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:paddingTop="@dimen/spacing_medial_24"
                    android:paddingBottom="@dimen/spacing_medial_24"
                    android:background="@color/gray">

                    <LinearLayout
                        style="@style/userStatLayout"
                        android:layout_weight="1">

                        <com.softdesign.devintensive.ui.view.TextView_Roboto
                            style="@style/upperFieldScores"
                            android:id="@+id/rating_et"
                            android:text="14"/>

                        <com.softdesign.devintensive.ui.view.TextView_Roboto
                            style="@style/upperFieldText"
                            android:text="@string/rating_field_desc"/>
                    </LinearLayout>

                    <View style="@style/verticalSplitter"/>

                    <LinearLayout
                        style="@style/userStatLayout"
                        android:layout_weight="2">

                        <com.softdesign.devintensive.ui.view.TextView_Roboto
                            style="@style/upperFieldScores"
                            android:id="@+id/codelines_et"
                            android:text="2191"/>

                        <com.softdesign.devintensive.ui.view.TextView_Roboto
                            style="@style/upperFieldText"
                            android:text="@string/codelines_field_desc"/>
                    </LinearLayout>

                    <View style="@style/verticalSplitter"/>

                    <LinearLayout
                        style="@style/userStatLayout"
                        android:layout_weight="1">

                        <com.softdesign.devintensive.ui.view.TextView_Roboto
                            style="@style/upperFieldScores"
                            android:id="@+id/projects_et"
                            android:text="4"/>

                        <com.softdesign.devintensive.ui.view.TextView_Roboto
                            style="@style/upperFieldText"
                            android:text="@string/projects_field_desc"/>

                    </LinearLayout>
                </LinearLayout>

                <!--Mobile-->
                <LinearLayout style="@style/userInfoBackground">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>

                    <LinearLayout
                        style="@style/inputField">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.softdesign.devintensive.ui.view.EditText_Roboto
                                style="@style/editText"
                                android:id="@+id/phone_et"
                                android:hint="@string/mobile_field_desc"
                                android:inputType="phone"
                                android:text="8(800)555-35-35"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/gray_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <!--Email-->
                <LinearLayout style="@style/userInfoBackground">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>

                    <LinearLayout
                        style="@style/inputField">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.softdesign.devintensive.ui.view.EditText_Roboto
                                style="@style/editText"
                                android:id="@+id/email_et"
                                android:hint="@string/email_field_desc"
                                android:inputType="textEmailAddress"
                                android:text="mail@hotmail.com"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/></LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/gray_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <!-- VK-->
                <LinearLayout style="@style/userInfoBackground">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/vk_circle"/>

                    <LinearLayout
                        style="@style/inputField">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.softdesign.devintensive.ui.view.EditText_Roboto
                                style="@style/editText"
                                android:id="@+id/vk_et"
                                android:hint="@string/vk_field_desc"
                                android:inputType="textUri"
                                android:text="vk.com/id61582684"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/></LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/gray_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <!--Repo-->
                <LinearLayout style="@style/userInfoBackground">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/github_circle"/>

                    <LinearLayout
                        style="@style/inputField">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.softdesign.devintensive.ui.view.EditText_Roboto
                                style="@style/editText"
                                android:id="@+id/repo_et"
                                android:hint="@string/git_field_desc"
                                android:inputType="textUri"
                                android:text="github.com/Gematrin/DevIntensive"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/></LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/gray_light"
                    android:layout_marginLeft="@dimen/spacing_larger_72"/>

                <!--About-->
                <LinearLayout style="@style/userInfoBackground">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>

                    <LinearLayout
                        style="@style/inputField"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_normal_16">

                            <com.softdesign.devintensive.ui.view.EditText_Roboto
                                style="@style/editText"
                                android:id="@+id/about_et"
                                android:hint="@string/about_field_desc"
                                android:inputType="textMultiLine"
                                android:text="There are only two things worse than an empty canvas: death and taxes."/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout></LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_right_space"/>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>